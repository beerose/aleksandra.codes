---
// The grain image lives in public/, because it's reused in og images.
const grainSvg = "/grain.svg";

interface Props {
  /** number between 0 and 1 */
  opacity: number;
}
const { opacity } = Astro.props;
---

<div
  style={{ opacity, background: `url(${grainSvg})` }}
  class="absolute inset-0 mix-blend-difference pointer-events-none select-none"
>
</div>
