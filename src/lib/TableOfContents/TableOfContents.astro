---
import type { MarkdownHeading } from "astro";

import { Link } from "../Link";

import { PostProgressBar } from "./PostProgressBar";

export interface Props {
  headings: MarkdownHeading[];
}

const { headings } = Astro.props;
---

<section
  class="fixed left-[max(0px,calc(50%-43rem/2-20rem-1rem))] top-1/2 -translate-y-1/2 w-[20rem] max-h-full overflow-y-auto p-4 pt-8 hidden xl:block"
>
  <PostProgressBar client:media="(min-width: 1280px)">
    <ul
      class="table-of-contents text-gray-700 dark:text-gray-400 text-sm leading-6"
    >
      {
        headings.map(({ text, depth, slug }) => {
          if (depth < 2 || depth > 3) return null;

          return (
            <li class:list={{ "ml-4": depth === 3 }}>
              <Link noUnderline href={"#" + slug}>
                {text}
              </Link>
            </li>
          );
        })
      }
    </ul>
  </PostProgressBar>
  <style>
    .table-of-contents:hover li:not(:hover) > a {
      @apply text-gray-600 transition-colors;
      :global(.dark) & {
        @apply text-gray-500;
      }
    }
    .table-of-contents:hover {
      & li:hover {
        :global(.dark) & {
          @apply text-gray-300;
        }
      }
    }
  </style>
</section>
